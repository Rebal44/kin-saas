{
  "name": "kin-backend",
  "version": "1.0.0",
  "description": "Kin bot integration layer for WhatsApp and Telegram",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:test": "NODE_ENV=test node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:api": "vitest run tests/api",
    "test:load": "vitest run tests/load --testTimeout=120000",
    "test:coverage": "vitest run --coverage",
    "test:integration": "playwright test tests/integration",
    "test:integration:ui": "playwright test tests/integration --ui",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:all": "npm run test:unit && npm run test:api && npm run test:integration && npm run test:e2e",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "db:generate": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > src/db/schema.ts",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps"
  },
  "dependencies": {
    "@clerk/express": "^0.1.0",
    "@sentry/node": "^7.91.0",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "node-telegram-bot-api": "^0.64.0",
    "puppeteer": "^21.6.1",
    "qrcode": "^1.5.3",
    "stripe": "^14.9.0",
    "whatsapp-web.js": "^1.23.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/node-telegram-bot-api": "^0.64.2",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
